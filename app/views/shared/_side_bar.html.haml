.side_bar
  .side_bar__top
    .side_bar__top__contents
      .side_bar__top__contents__user_name
        = current_user.name
      .side_bar__top__contents__function
        = link_to edit_user_path(current_user.id),class: "side_bar__top__contents__function--btn" do
          = icon('fa','cog')
        = link_to new_group_path,class: "side_bar__top__contents__function--btn" do
          = icon('fa','edit')
  .side_bar__bottom
    - current_user.groups.each do |group|
      .side_bar__bottom__group
        = link_to "#",class: "side_bar__bottom__group--link" do
          %p.side_bar__bottom__group--link--name #{group.name}
          %p.side_bar__bottom__group--link--post post
    
